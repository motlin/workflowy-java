<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="30 seconds" packagingData="true">
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level) %cyan(%date{HH:mm:ss.SSS, ${LOGGING_TIMEZONE}}) %gray(\(%file:%line\)) [%white(%thread)] %blue(%marker) {%magenta(%mdc)} %green(%logger): %message%n%rootException</pattern>
        </encoder>
    </appender>

    <logger name="com.gs.fw.common.mithra.sqllogs" level="DEBUG" />
    <logger name="com.gs.fw.common.mithra.batch.sqllogs" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="Console" />
    </root>
</configuration>
